@{
    ViewData["Title"] = "Service Fabric";
}

<div ng-app="staff" ng-controller="StaffController" ng-init="refresh()">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2 text-center">
                <h2>Service Fabric - Staff Tracker-Demo v1.0.0</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <form class="col-xs-12 ">
                    <div class="col-xs-6 form-group">
                        <input id="txtAdd" type="text" class="form-control"  ng-model="item" />
                    </div>
                    <button id="btnAdd"  ng-click="add(item)">
                        <span  aria-hidden="true"></span>
                        Check-in
                    </button>
                </form>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="row">
                    <div class="col-xs-4">
                        Staff Currently Checked-in
                    </div>
                </div>
                <div class="row top-buffer" ng-repeat="s in data">
                    <div class="col-xs-8">
                        <button class="btn" >
                            <span class="pull-left">
                                {{s.key}}
                            </span>
                           
                        </button>
                    </div>
                    <div class="col-xs-4">
                        <button ng-click="remove(s.key)">
                            <span  aria-hidden="true"></span>
                            Check-out
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>